    <div class="row">
        <div class="col col-6 offset-3">
            <h1>Edit Place</h1>
            {{#if errorMessage}}
            <div
                style="margin-top: 20px; padding: 5px; color: white; background: red; text-align: center; font-size: .95em">
                {{errorMessage}}</div>
            {{/if}}

            <form action="/places/{{id}}/edit" method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="name" value="{{name}}">
            </div>
            <div class="mb-3">
                <label class="form-label" for="type">Type ( bookstore / coffee shop )</label>
                <input class="form-control" type="text" id="type" name="type" value="{{type}}">
            </div>

            <div class="mb-3">
                <label class="form-label" for="latitude">Latitude</label>
                <input class="form-control" type="text" id="latitude" name="latitude" value="{{latitude}}">
            </div>
            <div class="mb-3">
                <label class="form-label" for="longitude">Longitude</label>
                <input class="form-control" type="text" id="longitude" name="longitude" value="{{longitude}}">
            </div>


            <div class="mb-3">
                <button class="btn btn-success">Edit place</button>
            </div>
            
        
        </form>



    </div>